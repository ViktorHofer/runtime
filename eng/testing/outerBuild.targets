<Project>
  <Target Name="VSTest"
          DependsOnTargets="GetProjectWithBestTargetFrameworks">
    <MSBuild Projects="@(InnerBuildProjectsWithBestTargetFramework)"
             Targets="VSTest"
             BuildInParallel="$(BuildAllProjects)" />
  </Target>
  <Target Name="Test"
          DependsOnTargets="VSTest">
    <Message Importance="high" Text="The Test target will be removed with the next infrastructure rollout. Please use 'dotnet test' instead." />
  </Target>
</Project>