<Project>
  <ItemGroup>
    <!-- Upgrade the NETStandard.Library transitive xunit dependency to avoid transitive 1.x NS dependencies. -->
    <PackageReference Include="NETStandard.Library"
                      Version="$(NetStandardLibrary20Version)"
                      Condition="'$(TargetFrameworkIdentifier)' == '.NETCoreApp'" />
  </ItemGroup>

  <!-- TODO: Remove when vstest's lightweight mode is available. -->
  <Import Project="$(MSBuildThisFileDirectory)xunit.console.targets"
          Condition="'$(TargetFrameworkIdentifier)' == '.NETCoreApp' and
                     '$(TargetsMobile)' != 'true' and
                     '$(ArchiveTests)' != 'true' and
                     '$(TestRunner)' == 'xunit'" />
</Project>
