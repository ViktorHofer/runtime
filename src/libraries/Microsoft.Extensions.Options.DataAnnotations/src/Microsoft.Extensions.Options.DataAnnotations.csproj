<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>$(NetCoreAppCurrent);netstandard2.0</TargetFrameworks>
    <EnableDefaultItems>true</EnableDefaultItems>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <Reference Include="Microsoft.Extensions.Options" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.ComponentModel.Annotations" Condition="'$(TargetFramework)' == '$(NetCoreAppCurrent)'" />
    <PackageReference Include="System.ComponentModel.Annotations" Condition="$(TargetFramework.StartsWith('netstandard'))" Version="$(SystemComponentModelAnnotationsVersion)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetsNetCoreApp)' == 'true'">
    <Reference Include="System.Collections" />
    <Reference Include="System.ComponentModel" />
    <Reference Include="System.Runtime" />
  </ItemGroup>

</Project>
